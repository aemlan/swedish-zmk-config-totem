        numpad_layer {
            bindings = <
           &kp RA(NUMBER_2)  &kp RA(N8)  &kp RA(N9)  &kp RA(N7)   &kp RA(N0)    &kp KP_MINUS  &kp N7  &kp N8  &kp N9  &trans
           &trans            &trans      &trans      &trans       &trans        &kp KP_PLUS   &kp N4  &kp N5  &kp N6  &trans
&kp LCTRL  &trans            &trans      &trans      &trans       &trans        &kp N0        &kp N1  &kp N2  &kp N3  &trans  &trans
                                         &trans      &lt 4 SPACE  &trans        &kp N0        &trans  &kp N0
            >;
        };

        navigation_layer {
            bindings = <
                &trans  &trans  &trans  &trans  &trans    &kp PG_UP  &trans          &kp UP_ARROW    &trans           &trans
                &trans  &trans  &trans  &trans  &trans    &kp PG_DN  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &trans
&kp LEFT_SHIFT  &trans  &trans  &trans  &trans  &trans    &trans     &trans          &trans          &trans           &trans  &trans
                                &trans  &trans  &trans    &trans     &trans          &trans
            >;
        };

        f_buttons_layer {
            bindings = <
        &kp F1  &kp F2  &kp F3  &kp F4  &kp F5    &kp F6  &kp F7  &kp F8  &kp F9   &kp F10
        &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &kp F11  &kp F12
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans   &trans   &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };

        gaming_layer {
            bindings = <
           &kp TAB    &kp Q  &kp W     &kp E      &kp R    &trans  &trans  &trans  &trans  &trans
           &kp LSHFT  &kp A  &kp S     &kp D      &kp F    &trans  &trans  &trans  &trans  &trans
&kp LCTRL  &kp GRAVE  &kp Z  &kp X     &kp C      &kp V    &trans  &trans  &trans  &trans  &trans  &trans
                             &kp LALT  &kp SPACE  &mo 6    &trans  &trans  &trans
            >;
        };

        gaming_alt_layer {
            bindings = <
        &trans  &kp N1  &kp N2  &kp N3  &kp N4    &trans  &trans  &trans  &trans  &trans
        &trans  &kp N5  &kp N6  &kp N7  &kp N8    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &kp B   &kp N   &kp M   &kp I     &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
